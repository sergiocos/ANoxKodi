<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="2901">
    <defaultcontrol>703</defaultcontrol>
    <controls>
        <control type="group">
            <posy>950</posy>
            <animation type="WindowOpen">
                <effect type="slide" start="0,218" end="0,0" time="440" tween="cubic" />
                <effect type="zoom" start="50" end="100" time="440" delay="0" center="auto" tween="cubic" />
                <effect type="fade" start="0" end="100" time="440"/>
            </animation>
            <animation type="WindowClose">
                <effect type="slide" end="0,218" start="0,0" time="440" tween="cubic" />
                <effect type="zoom" end="50" start="100" time="440" delay="0" center="auto" tween="cubic" />
            </animation>
            <animation effect="slide" end="0,218" time="240" delay="120" tween="quadratic">WindowClose</animation>
            <animation effect="slide" end="0,218" time="240" tween="quadratic" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(PVROSDGuide) | Window.IsVisible(PVROSDTeletext) | Window.IsVisible(PVROSDChannels) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks) | Window.IsVisible(1118)">Conditional</animation>
            <control type="image">
                <posy>-200</posy>
                <posx>-1000</posx>
                <width>3920</width>
                <height>330</height>
                <texture colordiffuse="black">home/nowplaying_shadow.png</texture>
            </control>
            <include>VideoOSD</include>
            <control type="group">
                <visible>!Window.IsActive(script-HomeWindow Script-fullscreeninfo.xml)</visible>
                <animation type="Visible">
                    <effect type="fade" time="160" end="100" />
                    <effect type="slide" time="160" start="0,98" end="0,0" tween="cubic" />
                </animation>
                <animation type="Hidden">
                    <effect type="fade" time="160" start="100" end="0" />
                    <effect type="slide" time="160" end="0,98" easing="in" tween="cubic" />
                </animation>
                <control type="label">
                    <posx>1840</posx>
                    <posy>-75</posy>
                    <width>400</width>
                    <height>75</height>
                    <align>right</align>
                    <aligny>bottom</aligny>
                    <label>$VAR[PlayerTimeLabelVar]</label>
                    <font>Font_Bold37_Caps</font>
                    <shadowcolor>black</shadowcolor>
                    <textcolor>white3</textcolor>
                    <animation effect="fade" start="0" end="100" delay="200" time="200">WindowOpen</animation>
                    <animation effect="fade" end="0" time="200">WindowClose</animation>
                </control>
                <control type="progress" id="23">
                    <animation effect="fade" end="0" time="200">WindowClose</animation>
                    <posx>83</posx>
                    <posy>-20</posy>
                    <width>1754</width>
                    <height>15</height>
                    <info>Player.Progress</info>
                    <texturebg colordiffuse="$VAR[AreaColorVar]" border="3">new_pvr/texturebg_border_white.png</texturebg>
                    <midtexture colordiffuse="$VAR[AreaColorVar]">new_pvr/texturebg_white.png</midtexture>
                </control>
            </control>
        </control>
        <control type="group">
            <animation effect="slide" end="0,260" time="240" tween="quadratic" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(PVROSDGuide) | Window.IsVisible(PVROSDTeletext) | Window.IsVisible(PVROSDChannels) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks) | Window.IsVisible(1118)">Conditional</animation>
            <visible>!Window.IsActive(script-HomeWindow Script-fullscreeninfo.xml)</visible>
            <include condition="VideoPlayer.Content(LiveTV)">FullScreenInfoBarLiveTV</include>
        </control>
    </controls>
</window>
