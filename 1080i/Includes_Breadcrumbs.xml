<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="FeaturedTopLabel">
        <width min="15" max="1920">auto</width>
        <height>38</height>
        <font>Font_Reg37_Caps</font>
        <shadowcolor>bcshadow</shadowcolor>
        <textcolor>white2</textcolor>
    </include>
    <include name="BreadcrumbsLabel">
        <width min="15" max="1920">auto</width>
        <height>38</height>
        <font>Font_Reg30_Caps</font>
        <shadowcolor>bcshadow</shadowcolor>
        <textcolor>$VAR[BreadCrumbsContentColorVar]</textcolor>
        <scroll>false</scroll>
    </include>
    <include name="Breadcrumbs_BackBar">
        <control type="group">
            <control type="image">
                <posy>-40</posy>
                <width>2200</width>
                <height>115</height>
                <texture>views/logo_tagline_gradient.png</texture>
            </control>
        </control>
    </include>
    <include name="BreadcrumbsContent">
        <control type="grouplist">
            <posx>5</posx>
            <width>900</width>
            <orientation>horizontal</orientation>
            <usecontrolcoords>true</usecontrolcoords>
            <visible>![Player.HasMedia + IsEmpty(Window(videolibrary).Property(tvtunesIsAlive))]</visible>
            <include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
            <control type="image">
                <width>36</width>
                <height>36</height>
                <posx>-2</posx>
                <posy>2</posy>
                <texture colordiffuse="$VAR[TitleColorVar]">settingsarrow.png</texture>
                <animation effect="rotate" end="-90" center="auto" delay="240" time="640" condition="Window.IsActive(musicinformation) | Control.HasFocus(7000) | Control.IsVisible(508) | Control.IsVisible(501) | Control.IsVisible(503) | Control.IsVisible(57) | Control.IsVisible(516) | Control.IsVisible(509) | [Control.IsVisible(500) + !Skin.HasSetting(WallVertical)]">Conditional</animation>
                <animation effect="rotate" end="-180" center="auto" delay="240" time="640" condition="ControlGroup(9000).HasFocus">Conditional</animation>
                <animation effect="rotate" start="-90" end="180" center="auto" delay="240" time="640" condition="Control.IsVisible(503) + [Skin.HasSetting(landscapeonelogo) + Container.Content(movies)]">Conditional</animation>
            </control>
            <control type="image">
                <width>54</width>
                <height>38</height>
                <aspectratio>keep</aspectratio>
                <texture colordiffuse="$VAR[TitleColorVar]">$VAR[BreadcrumbsIconVar]</texture>
                <visible>!Player.HasMedia</visible>
            </control>
            <control type="label">
                <label>$VAR[BreadcrumbsVideoVar]</label>
                <include>BreadcrumbsLabel</include>
            </control>
            <control type="label">
                <label>$VAR[BreadcrumbsLabel2Var]</label>
                <include>BreadcrumbsLabel</include>
                <visible>!Window.IsActive(PVR)</visible>
            </control>
            <control type="label">
                <label>$INFO[Control.GetLabel(10),: ]</label>
                <include>BreadcrumbsLabel</include>
                <visible>!Stringcompare(Control.GetLabel(10),$LOCALIZE[16100]) + Window.IsActive(videos)</visible>
            </control>
            <control type="label">
                <label>(Filtered)</label>
                <include>BreadcrumbsLabel</include>
                <visible>Container.Filtered</visible>
            </control>
        </control>
        <control type="button" id="4051">
            <include>HiddenObject</include>
            <visible>![Container.Scrolling | Container.OnScrollNext | Container.OnScrollPrevious]</visible>
            <animation effect="fade" end="100" time="0">Visible</animation>
            <animation effect="fade" time="400">Hidden</animation>
        </control>
        <control type="group">
            <control type="grouplist">
                <width>1900</width>
                <align>right</align>
                <aligny>center</aligny>
                <orientation>horizontal</orientation>
                <include>Animation_WindowFade200</include>
                <control type="label">
                    <width min="15" max="1920">auto</width>
                    <height>38</height>
                    <label>[COLOR $VAR[BreadCrumbsContentColorVar]] $INFO[System.Date(DDD)], $INFO[System.Date(d)] $INFO[System.Date(mmm)] $INFO[System.Date(yyyy)]  â€¢  [/COLOR][COLOR=$VAR[TitleColorVar]]$INFO[System.Time][/COLOR]</label>
                    <font>Font_Reg30_Caps</font>
                    <shadowcolor>bcshadow</shadowcolor>
                    <textcolor>$VAR[BreadCrumbsContentColorVar]</textcolor>
                    <scroll>false</scroll>
                </control>
            </control>
        </control>
    </include>
    <include name="Furniture_NowPlayingWidget">
        <control type="group">
            <include>Animation_HideBreadCrumbs</include>
            <visible>Player.HasMedia</visible>
            <include condition="![Window.IsActive(skinsettings) | Window.IsActive(SettingsCategory.xml) | Window.IsActive(systeminfo) | Window.IsActive(settings)]">Animation_WindowFade200</include>
            <include condition="Window.isActive(videos) + system.hasaddon(script.tvtunes)">TvTunesVisibleCondition</include>
            <control type="multiimage">
                <posx>12</posx>
                <posy>9</posy>
                <width>30</width>
                <height>24</height>
                <imagepath>VisualEqu/</imagepath>
                <fadetime>10</fadetime>
                <timeperimage>100</timeperimage>
                <randomize>true</randomize>
                <visible>Player.HasAudio + Player.Playing</visible>
                <colordiffuse>$VAR[TitleColorVar]</colordiffuse>
            </control>
            <control type="image">
                <posx>12</posx>
                <posy>9</posy>
                <width>30</width>
                <height>24</height>
                <texture colordiffuse="$VAR[TitleColorVar]">VisualEqu/static/0.png</texture>
                <visible>Player.HasAudio + !Player.Playing</visible>
            </control>
            <control type="image">
                <width>54</width>
                <height>38</height>
                <aspectratio>keep</aspectratio>
                <texture colordiffuse="$VAR[TitleColorVar]">common/logo_movies.png</texture>
                <visible>Player.HasVideo</visible>
            </control>
            <control type="grouplist">
                <posx>68</posx>
                <width>600</width>
                <height>118</height>
                <orientation>horizontal</orientation>
                <itemgap>22</itemgap>
                <control type="label">
                    <width min="15" max="200">auto</width>
                    <height>38</height>
                    <label>$INFO[Player.Time]</label>
                    <font>Font_Reg30_Caps</font>
                    <textcolor>grey</textcolor>
                </control>
                <control type="fadelabel">
                    <posx>280</posx>
                    <width>470</width>
                    <height>38</height>
                    <label>[COLOR white2]$INFO[MusicPlayer.Title][/COLOR]</label>
                    <label>[COLOR white3]$INFO[MusicPlayer.Artist][/COLOR]</label>
                    <font>Font_Reg30_Caps</font>
                    <scroll>true</scroll>
                    <pauseatend>7000</pauseatend>
                    <visible>Player.HasAudio</visible>
                </control>
                <control type="fadelabel">
                    <posx>310</posx>
                    <width>480</width>
                    <height>38</height>
                    <label>[COLOR white2]$INFO[Videoplayer.Title][/COLOR]</label>
                    <label>[COLOR white3]$INFO[Videoplayer.TVShowTitle][/COLOR]</label>
                    <font>Font_Reg30_Caps</font>
                    <scroll>true</scroll>
                    <pauseatend>7000</pauseatend>
                    <visible>!IsEmpty(Videoplayer.TVShowTitle) + Player.HasVideo</visible>
                </control>
                <control type="fadelabel">
                    <posx>310</posx>
                    <width>480</width>
                    <height>38</height>
                    <label>$INFO[Videoplayer.Title]</label>
                    <font>Font_Reg30_Caps</font>
                    <scroll>true</scroll>
                    <pauseatend>7000</pauseatend>
                    <visible>IsEmpty(Videoplayer.TVShowTitle) + Player.HasVideo + IsEmpty(VideoPlayer.ChannelName)</visible>
                </control>
                <control type="fadelabel">
                    <posx>310</posx>
                    <width>480</width>
                    <height>38</height>
                    <label>$INFO[Videoplayer.ChannelName]</label>
                    <label>$INFO[Videoplayer.Title]</label>
                    <font>Font_Reg30_Caps</font>
                    <scroll>true</scroll>
                    <pauseatend>7000</pauseatend>
                    <visible>Player.HasVideo + !IsEmpty(VideoPlayer.ChannelName)</visible>
                </control>
            </control>
        </control>
    </include>
</includes>
