<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Banners">
        <control type="group">
            <visible>Control.IsVisible(508)</visible>
            <animation effect="slide" tween="cubic" easing="out" time="500" start="0,506" end="0,0">VisibleChange</animation>
            <include>Animation_OpenCloseZoom</include>
            <control type="image">
                <posx>10</posx>
                <posy>806</posy>
                <width>40</width>
                <height>40</height>
                <texture flipx="true">arrowright.png</texture>
                <animation effect="fade" time="200">VisibleChange</animation>
                <colordiffuse>white2</colordiffuse>
                <animation effect="slide" start="-150" end="0" delay="640" time="320" tween="cubic">WindowOpen</animation>
                <animation effect="slide" start="50" end="0" time="320" tween="cubic" condition="Container(508).Position(1) | Container(508).Position(2) | Container(508).Position(0)">Conditional</animation>
                <visible>Container.HasPrevious</visible>
            </control>
            <control type="image">
                <posx>1880</posx>
                <posy>806</posy>
                <width>40</width>
                <height>40</height>
                <texture>arrowright.png</texture>
                <colordiffuse>white2</colordiffuse>
                <animation effect="fade" time="200">VisibleChange</animation>
                <animation effect="slide" start="-50" end="0" time="320" tween="cubic" condition="Container(508).Position(6) | Container(508).Position(7) | Container(508).Position(8)">Conditional</animation>
                <animation effect="slide" start="150" end="0" delay="640" time="320" tween="cubic">WindowOpen</animation>
                <visible>Container.HasNext</visible>
            </control>
                <control type="image">
                    <posx>96</posx>
                    <posy>601</posy>
                    <width>1730</width>
                    <height>389</height>
                    <texture colordiffuse="$VAR[DialogColorVar]" border="50">featured/panel_featured.png</texture>
                </control>
            <control type="panel" id="508">
                <posx>117</posx>
                <posy>630</posy>
                <width>1686</width>
                <height>360</height>
                <onleft>508</onleft>
                <onright>508</onright>
                <onup>7000</onup>
                <ondown>610</ondown>
                <orientation>horizontal</orientation>
                <viewtype label="$LOCALIZE[31236]">wide icon</viewtype>
                <pagecontrol>61</pagecontrol>
                <scrolltime tween="cubic">300</scrolltime>
                <focusposition>2</focusposition>
                <preloaditems>2</preloaditems>
                <visible>Container.Content(TVShows) | Container.Content(movies) | Container.Content(seasons)</visible>
                <visible>![!IsEmpty(Skin.String(DisableBannersVL)) + Window.IsActive(videos)]</visible>
                <itemlayout width="562" height="104">
                    <control type="image">
                        <width>562</width>
                        <height>104</height>
                        <aspectratio>scale</aspectratio>
                        <texture background="true">$VAR[BannerVar]</texture>
                    </control>
                    <control type="image">
                        <posx>-7</posx>
                        <posy>1</posy>
                        <width>576</width>
                        <height>103</height>
                        <aspectratio>keep</aspectratio>
                        <texture background="true">$VAR[LogoVarList]</texture>
                        <visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(tvshow.banner))</visible>
                    </control>
                    <control type="label">
                        <posx>0</posx>
                        <width>562</width>
                        <height>104</height>
                        <align>center</align>
                        <label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
                        <font>Font_Bold40</font>
                        <shadowcolor>black</shadowcolor>
                        <visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(tvshow.banner)) + IsEmpty(ListItem.Art(clearlogo))</visible>
                    </control>
                    <control type="image">
                        <posx>472</posx>
                        <width>90</width>
                        <height>90</height>
                        <texture>$VAR[OverlayVisibility0]</texture>
                    </control>
                    <control type="group">
                        <include>UnwatchedIcon</include>
                    </control>
                    <control type="image">
                        <width>562</width>
                        <height>104</height>
                        <texture>common/bgcolor.png</texture>
                        <colordiffuse>77FFFFFF</colordiffuse>
                    </control>
                    <control type="image">
                        <width>562</width>
                        <height>104</height>
                        <texture background="true">thumbs/banner_shadow_in.png</texture>
                    </control>
                </itemlayout>
                <focusedlayout width="562" height="104">
                    <control type="group">
                        <animation effect="zoom" center="255,40" start="100" end="122" time="480" tween="back" reversible="false">Focus</animation>
                        <control type="image">
                            <posx>-7</posx>
                            <posy>-7</posy>
                            <width>576</width>
                            <height>118</height>
                            <aspectratio>scale</aspectratio>
                            <texture background="true">$VAR[BannerVar]</texture>
                            <bordertexture border="7">thumbs/thumbshadow.png</bordertexture>
                            <bordersize>7</bordersize>
                        </control>
                        <control type="image">
                            <posx>-7</posx>
                            <posy>1</posy>
                            <width>576</width>
                            <height>103</height>
                            <aspectratio>keep</aspectratio>
                            <texture background="true">$VAR[LogoVarList]</texture>
                            <visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(tvshow.banner))</visible>
                        </control>
                        <control type="label">
                            <posx>0</posx>
                            <width>562</width>
                            <height>104</height>
                            <align>center</align>
                            <label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
                            <font>Font_Bold40</font>
                            <shadowcolor>black</shadowcolor>
                            <textcolor>CCFFFFFF</textcolor>
                            <visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(tvshow.banner)) + IsEmpty(ListItem.Art(clearlogo))</visible>
                        </control>
                        <control type="group">
                            <include>UnwatchedIcon</include>
                        </control>
                        <control type="image">
                            <posx>472</posx>
                            <width>90</width>
                            <height>90</height>
                            <texture>$VAR[OverlayVisibility0]</texture>
                        </control>
                        <control type="image">
                            <width>562</width>
                            <height>104</height>
                            <texture background="true">thumbs/banner_shadow_in.png</texture>
                            <animation effect="fade" time="120" delay="120" start="100" end="0">Focus</animation>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </include>
</includes>
